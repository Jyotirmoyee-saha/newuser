<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.address %></td>
        
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <ul><%user.posts.each do |p|%>
       <li> <%=p.title%></li>
        <%end%></ul>
        
        
    <% end %>
  </tbody>
  <thead>
  <tr>
  <th>teacher</th>
  <th>Student</th>
   <th>subject</th>
   <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @admins.each do |admin|%>
  <tr>
  
  <td><%=admin.teacher.name%></td>
  <td><%=admin.student.name%></td>
  <td><%=admin.teacher.subject%></td>
 
  </tr>
  <% if admin.teacher.subject == "history" %>
    <p><%= admin.student.name %> (history Student)</p>
  <% end %>
   <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %></br>
